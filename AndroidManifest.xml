<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.multipleandroidcoding.catapult"
    android:versionCode="1"
    android:versionName="1.0.0 Prerelease 6"
    android:installLocation="auto">
        
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" android:maxSdkVersion="16"/>

    <original-package android:name="net.multipleandroidcoding.catapult" />

    <permission
        android:name="net.multipleandroidcoding.catapult.permission.PRELOAD_WORKSPACE"
        android:permissionGroup="android.permission-group.SYSTEM_TOOLS"
        android:protectionLevel="system|signature" />
    <permission
        android:name="net.multipleandroidcoding.catapult.permission.INSTALL_SHORTCUT"
        android:permissionGroup="android.permission-group.SYSTEM_TOOLS"
        android:protectionLevel="normal"
        android:label="@string/permlab_install_shortcut"
        android:description="@string/permdesc_install_shortcut" />
    <permission
        android:name="net.multipleandroidcoding.catapult.permission.UNINSTALL_SHORTCUT"
        android:permissionGroup="android.permission-group.SYSTEM_TOOLS"
        android:protectionLevel="normal"
        android:label="@string/permlab_uninstall_shortcut"
        android:description="@string/permdesc_uninstall_shortcut"/>
    <permission
        android:name="net.multipleandroidcoding.catapult.permission.READ_SETTINGS"
        android:permissionGroup="android.permission-group.SYSTEM_TOOLS"
        android:protectionLevel="normal"
        android:label="@string/permlab_read_settings"
        android:description="@string/permdesc_read_settings"/>
    <permission
        android:name="net.multipleandroidcoding.catapult.permission.WRITE_SETTINGS"
        android:permissionGroup="android.permission-group.SYSTEM_TOOLS"
        android:protectionLevel="normal"
        android:label="@string/permlab_write_settings"
        android:description="@string/permdesc_write_settings"/>

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.SET_WALLPAPER_HINTS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.BIND_APPWIDGET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="net.multipleandroidcoding.catapult.permission.READ_SETTINGS" />
    <uses-permission android:name="net.multipleandroidcoding.catapult.permission.WRITE_SETTINGS" />

    <application
        android:name="net.multipleandroidcoding.catapult.LauncherApplication"
        android:label="@string/application_name"
        android:icon="@drawable/ic_launcher_home"
        android:hardwareAccelerated="@bool/config_hardwareAccelerated"
        android:largeHeap="@bool/config_largeHeap">
        <activity
            android:name="net.multipleandroidcoding.catapult.Launcher"
            android:launchMode="singleTask"
            android:clearTaskOnLaunch="true"
            android:stateNotNeeded="true"
            android:theme="@style/Theme"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.MONKEY"/>
            </intent-filter>
        </activity>

        <activity
            android:name="net.multipleandroidcoding.catapult.WallpaperChooser"
            style="@style/Theme.WallpaperPicker"
            android:label="@string/pick_wallpaper"
            android:icon="@drawable/ic_launcher_wallpaper"
            android:finishOnCloseSystemDialogs="true"
            android:process=":wallpaper_chooser">
            <intent-filter>
                <action android:name="android.intent.action.SET_WALLPAPER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data android:name="android.wallpaper.preview"
                android:resource="@xml/wallpaper_picker_preview" />
        </activity>

        <activity android:name="net.multipleandroidcoding.catapult.RocketLauncher"
            android:label="@string/dream_name"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.DREAM" />
            </intent-filter>
        </activity>
        
        <activity android:name="net.multipleandroidcoding.catapult.preference.Preferences"
            android:label="@string/preferences_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.cyanogenmod.category.LAUNCHER_PREFERENCES" />
            </intent-filter>
        </activity>

        <!-- Intent received used to prepopulate the default workspace. -->
        <receiver
            android:name="net.multipleandroidcoding.catapult.PreloadReceiver"
            android:permission="net.multipleandroidcoding.catapult.permission.PRELOAD_WORKSPACE">
            <intent-filter>
                <action android:name="net.multipleandroidcoding.catapult.action.PRELOAD_WORKSPACE" />
            </intent-filter>
        </receiver>

        <!-- Intent received used to install shortcuts from other applications -->
        <receiver
            android:name="net.multipleandroidcoding.catapult.InstallShortcutReceiver"
            android:permission="net.multipleandroidcoding.catapult.permission.INSTALL_SHORTCUT">
            <intent-filter>
                <action android:name="net.multipleandroidcoding.catapult.action.INSTALL_SHORTCUT" />
            </intent-filter>
        </receiver>

        <!-- Intent received used to uninstall shortcuts from other applications -->
        <receiver
            android:name="net.multipleandroidcoding.catapult.UninstallShortcutReceiver"
            android:permission="net.multipleandroidcoding.catapult.permission.UNINSTALL_SHORTCUT">
            <intent-filter>
                <action android:name="net.multipleandroidcoding.catapult.action.UNINSTALL_SHORTCUT" />
            </intent-filter>
        </receiver>

        <!-- The settings provider contains Home's data, like the workspace favorites -->
        <provider
            android:name="net.multipleandroidcoding.catapult.LauncherProvider"
            android:authorities="net.multipleandroidcoding.catapult.settings"
            android:writePermission="net.multipleandroidcoding.catapult.permission.WRITE_SETTINGS"
            android:readPermission="net.multipleandroidcoding.catapult.permission.READ_SETTINGS" />

    </application>
</manifest>
